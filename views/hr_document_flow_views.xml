<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="hr_document_flow_tree_view" model="ir.ui.view">
            <field name="name">HR Document Flow tree view</field>
            <field name="model">hr.document_flow</field>
            <field name="arch" type="xml">
                <tree string='Document flow'>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="validity"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                    <field name="create_date" string="Create date"/>
                </tree>
            </field>
        </record>

        <record id="hr_document_flow_form_view" model="ir.ui.view">
            <field name="name">HR Document Flow form view</field>
            <field name="model">hr.document_flow</field>
            <field name="arch" type="xml">
                <form string='Document flow'>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_get_attachment_tree_view" string='Documents' class="oe_stat_button" icon="fa-book" type="object">
<!--                                <field name="attachment_number" widget="statinfo" string="Documents"/>-->
                            </button>
                        </div>
                        <div name="title-name" class="oe_title">
                            <h2>
                                <label for="name" class="oe_edit_only" string="Document name"/>
                                <field name="name" placeholder="Document title..." attrs="{'readonly': [('state', '!=', 'new')]}"/>
                            </h2>
                        </div>

                        <label for="tag_ids" class="oe_edit_only"/>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                        <group col="4">
                            <group>
                                <field name="validity"/>
                            </group>
                            <group>
                                <field name="attachment_ids" widget="many2many_binary" colspan="2" string="Upload files" nolabel="1" attrs="{'invisible': [('state', 'not in', ('new'))]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Signer">
                                <field name="signers_lines">
                                    <tree editable="bottom">
                                        <field name="employee_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                        <field name="signer_email"/>
                                        <field name="mobile_phone"/>
                                        <field name="role_id"/>
                                        <field name="state"/>
                                        <field name="document_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Contacts in copy">
                            </page>
                            <page string="Activity Logs">
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="hr_document_flow_tags_tree_view" model="ir.ui.view">
            <field name="name">HR Document Flow Tags tree view</field>
            <field name="model">hr.document_flow.tags</field>
            <field name="arch" type="xml">
                <tree string='Tags' editable="bottom">
                    <field name="name"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>

        <record id="hr_document_flow_role_tree_view" model="ir.ui.view">
            <field name="name">HR Document Flow Role tree view</field>
            <field name="model">hr.document_flow.role</field>
            <field name="arch" type="xml">
                <tree string='Signature Item Role' editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="my_hr_document_flow_act" model="ir.actions.act_window">
            <field name="name">My documents</field>
            <field name="res_model">hr.document_flow</field>
            <field name="domain">[('create_uid', '=', uid)]</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="all_hr_document_flow_act" model="ir.actions.act_window">
            <field name="name">All documents</field>
            <field name="res_model">hr.document_flow</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="hr_document_flow_config_roles_act" model="ir.actions.act_window">
            <field name="name">Roles</field>
            <field name="res_model">hr.document_flow.role</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="hr_document_flow_config_tags_act" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">hr.document_flow.tags</field>
            <field name="view_mode">tree</field>
        </record>

    </data>

    <menuitem name="Document flow" id="menu_root" web_icon="hr_document_flow,static/description/icon.png"/>
    <menuitem name="Documents" id="menu_document_flow" parent="menu_root" sequence="10"/>
    <menuitem name="My documents" id="menu_my_document_flow" action="my_hr_document_flow_act" parent="menu_document_flow" sequence="1"/>
    <menuitem name="All documents" id="menu_all_document_flow" action="all_hr_document_flow_act" parent="menu_document_flow" sequence="5"/>

    <menuitem name="Configuration" id="menu_config" parent="menu_root" sequence="20"/>
    <menuitem name="Roles" id="menu_config_roles" action="hr_document_flow_config_roles_act" parent="menu_config" sequence="1"/>
    <menuitem name="Tags" id="menu_config_tags" action="hr_document_flow_config_tags_act" parent="menu_config" sequence="5"/>

</odoo>