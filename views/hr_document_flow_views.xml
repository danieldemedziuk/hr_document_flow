<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="hr_document_flow_tree_view" model="ir.ui.view">
            <field name="name">HR Document Flow tree view</field>
            <field name="model">hr.document_flow</field>
            <field name="arch" type="xml">
                <tree string='Document flow'>
                    <field name="name"/>
                    <field name="doc_type"/>
                    <field name="validity"/>
                    <field name="create_uid" string="Create by"/>
                    <field name="create_date" string="Create date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="hr_document_flow_form_view" model="ir.ui.view">
            <field name="name">HR Document Flow form view</field>
            <field name="model">hr.document_flow</field>
            <field name="arch" type="xml">
                <form string='Document flow' duplicate="0">
                    <header>
                        <button string="Send" name='action_send_message' class="oe_highlight" type="object" attrs="{'invisible': ['|', ('current_employee', '=', False), ('state', '!=', 'new')]}"/>
                        <button string="Verified" name='action_verified' class="oe_highlight" type="object" attrs="{'invisible': ['|', ('complete_flow', '!=', True), ('state', 'not in', ['sent'])]}"
                                groups="hr_document_flow.group_hr_document_flow_officer"/>
                        <button string="Archive" name='action_archived' type="object" attrs="{'invisible': ['|', ('state', '!=', 'sent'), ('complete_flow', '=', False)]}"
                                groups="hr_document_flow.group_hr_document_flow_officer"/>
                        <button string="Cancel" name='action_canceled' type="object" attrs="{'invisible': ['|', ('state', 'not in', ['sent']), ('current_employee', '=', False)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,sent,verified-done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box" attrs="{'invisible': [('state', '=', 'draft')]}" groups="hr_document_flow.group_hr_document_flow_officer">
                            <button name="action_get_attachment_tree_view" class="oe_stat_button" icon="fa-book" type="object">
                                <field name="doc_count" widget="statinfo" string="Documents"/>
                            </button>
                        </div>
                        <div name="title-name" class="oe_title">
                            <h2>
                                <label for="name" class="oe_edit_only" string="Document name" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                                <field name="name" placeholder="Document title..." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </h2>
                        </div>

                        <group col="4">
                            <group col="2">
                                <field name="doc_type" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('state', 'not in', ['draft', 'new'])]}"/>
                                <field name="sign_type" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('state', 'not in', ['draft', 'new'])]}"/>
                                <field name="validity" attrs="{'readonly': [('state', 'not in', ['draft', 'new'])]}"/>
                                <field name="user_signer_ids" widget="many2many_tags" invisible="1"/>
                                <field name="complete_flow" invisible="1"/>
                                <field name="creator_id" string='Employee' invisible="1"/>
                                <field name="current_employee" string='User' invisible="1"/>
                            </group>
                            <group col="2">
                                <div class="alert alert-info" role="alert">
                                    In order to prevent conflicts during the signing of the document, which may result in a longer process, we recommend sending the document in PDF format
                                    <strong>!</strong>
                                    <br/>
                                </div>
                                <field name="attachment_ids" widget="many2many_binary" colspan="2" string="Upload files" nolabel="1" attrs="{'readonly': [('state', 'not in', ['draft', 'new'])]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Signer">
                                <field name="signers_lines" attrs="{'readonly': [('state', 'in', ['verified-done', 'archived', 'expired', 'refused'])]}">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle" attrs="{'invisible': [('rel_state', 'not in', ['draft', 'new'])]}"/>
                                        <field name="employee_id" options="{'no_create': True, 'no_create_edit': True}" attrs="{'readonly': [('rel_state', 'not in', ['draft', 'new'])]}"/>
                                        <field name="signer_email"/>
                                        <field name="mobile_phone"/>
                                        <field name="attachment_ids" widget="many2many_binary"
                                               attrs="{'invisible': [('state', 'not in', ['sent', 'completed'])], 'readonly': ['|', ('current_employee', '=', False), ('state', 'in', ['completed', 'archived'])]}"/>
                                        <field name="state"/>
                                        <button string='Resend' name="resend_email" type="object"
                                                attrs="{'invisible': ['|', '|', ('state', 'not in', ['sent']), ('rel_state', 'not in', ['sent']), ('current_employee', '=', True)]}"/>
                                        <button string='Refuse' name="action_refuse" type="object"
                                                attrs="{'invisible': ['|', ('current_employee', '!=', True), '|', ('rel_state', 'not in', ['sent']), ('state', 'not in', ['sent'])]}"/>
                                        <field name="current_employee" invisible="1"/>
                                        <field name="rel_state" invisible="1"/>
                                        <field name="document_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="employee_id"/>
                                                <field name="signer_email"/>
                                                <field name="state"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Contacts in copy">
                                <field name="employee_cc_ids" attrs="{'readonly': [('state', 'in', ['verified-done', 'archived', 'expired', 'refused'])]}">
                                    <tree editable="bottom">
                                        <field name="employee_id" options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"/>
                                        <field name="email"/>
                                        <field name="document_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Activity Logs" attrs="{'invisible': [('state', '=', 'draft')]}">
                                <field name="activity_log_ids" readonly="1" force_save="1" style="pointer-events:none;">
                                    <tree>
                                        <field name="action"/>
                                        <field name="log_date"/>
                                        <field name="employee_id"/>
                                        <field name="document_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="o_attachment_preview"/>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_document_flow_type_tree_view" model="ir.ui.view">
            <field name="name">HR Document Flow Type tree view</field>
            <field name="model">hr.document_flow.type</field>
            <field name="arch" type="xml">
                <tree string='Type' editable="bottom">
                    <field name="name" placeholder="Document type name..."/>
                </tree>
            </field>
        </record>

        <record id="hr_document_flow_sign_type_tree_view" model="ir.ui.view">
            <field name="name">HR Document Flow Sign Type tree view</field>
            <field name="model">hr.document_flow.sign_type</field>
            <field name="arch" type="xml">
                <tree string='Sign type' editable="bottom">
                    <field name="name" placeholder="Sign type name..."/>
                </tree>
            </field>
        </record>

        <record id="hr_document_flow_role_tree_view" model="ir.ui.view">
            <field name="name">HR Document Flow Role tree view</field>
            <field name="model">hr.document_flow.role</field>
            <field name="arch" type="xml">
                <tree string='Signature Item Role' editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_document_flow_config_tree_view" model="ir.ui.view">
            <field name="name">HR Document Flow Config tree view</field>
            <field name="model">hr.document_flow.config</field>
            <field name="arch" type="xml">
                <tree string='Configuration'>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hr_document_flow_config_form_view" model="ir.ui.view">
            <field name="name">HR Document Flow Config form view</field>
            <field name="model">hr.document_flow.config</field>
            <field name="arch" type="xml">
                <form string='Configuration'>
                    <sheet>
                        <div name="title-name" class="oe_title">
                            <h2>
                                <field name="name" readonly="1"/>
                            </h2>
                        </div>

                        <group>
                            <group string="Email notification">
                                <field name="days_notifi"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_document_flow_tree_view_search" model="ir.ui.view">
            <field name="name">hr_document_flow_tree_view.search</field>
            <field name="model">hr.document_flow</field>
            <field name="arch" type="xml">
                <search string="Document to sign">
                    <field name="name"/>
                    <field name="doc_type"/>
                    <field name="validity"/>
                    <field name="create_uid"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter name="group_type" string="Type" context="{'group_by':'doc_type'}"/>
                        <filter name="group_create_uid" string="Created by" context="{'group_by':'create_uid'}"/>
                        <filter name="group_state" string="State" context="{'group_by':'state'}"/>
                    </group>
                    <filter name="open_docs" string="Open documents" domain="[('state', 'in', ['new', 'sent'])]"/>
                    <filter name="sign_docs" string="Signed documents" domain="[('state', '=', 'verified-done')]"/>
                    <filter name="expired_docs" string="Expired documents" domain="[('validity', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                </search>
            </field>
        </record>

        <record id="my_hr_document_flow_act" model="ir.actions.act_window">
            <field name="name">My documents</field>
            <field name="res_model">hr.document_flow</field>
            <field name="domain">['|', ('create_uid', '=', uid), ('user_signer_ids', '=', uid)]</field>
            <field name="search_view_id" ref="hr_document_flow_tree_view_search"/>
            <field name="context">{
                'search_default_open_docs': 1,
                }
            </field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="all_hr_document_flow_act" model="ir.actions.act_window">
            <field name="name">All documents</field>
            <field name="res_model">hr.document_flow</field>
            <field name="domain">[]</field>
            <field name="search_view_id" ref="hr_document_flow_tree_view_search"/>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="hr_document_flow_config_roles_act" model="ir.actions.act_window">
            <field name="name">Roles</field>
            <field name="res_model">hr.document_flow.role</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="hr_document_flow_config_doc_type_act" model="ir.actions.act_window">
            <field name="name">Document types</field>
            <field name="res_model">hr.document_flow.type</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="hr_document_flow_config_sign_type_act" model="ir.actions.act_window">
            <field name="name">Sign type</field>
            <field name="res_model">hr.document_flow.sign_type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="hr_document_flow_config_act" model="ir.actions.act_window">
            <field name="name">Config</field>
            <field name="res_model">hr.document_flow.config</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>

    <menuitem name="Document flow" id="menu_root" web_icon="hr_document_flow,static/description/icon.png"/>
    <menuitem name="Documents" id="menu_document_flow" parent="menu_root" sequence="10"/>
    <menuitem name="My documents" id="menu_my_document_flow" action="my_hr_document_flow_act" parent="menu_document_flow" sequence="1"/>
    <menuitem name="All documents" id="menu_all_document_flow" action="all_hr_document_flow_act" parent="menu_document_flow" sequence="5" groups="group_hr_document_flow_officer"/>

    <menuitem name="Configuration" id="menu_config" parent="menu_root" sequence="20" groups="group_hr_document_flow_officer"/>
    <menuitem name="Config" id="menu_config_config" action="hr_document_flow_config_act" parent="menu_config" sequence="1"/>
    <menuitem name="Roles" id="menu_config_roles" action="hr_document_flow_config_roles_act" parent="menu_config" sequence="5"/>
    <menuitem name="Document types" id="menu_config_doc_type" action="hr_document_flow_config_doc_type_act" parent="menu_config" sequence="15"/>
    <menuitem name="Sign types" id="menu_config_sign_type" action="hr_document_flow_config_sign_type_act" parent="menu_config" sequence="19"/>

</odoo>